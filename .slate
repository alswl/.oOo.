# This is the default .slate file.
# If no ~/.slate file exists this is the file that will be used.

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Alias
alias mouse_left shell path:~/ '/usr/local/bin/cliclick m:640,400'
alias mouse_right shell path:~/ '/usr/local/bin/cliclick m:1920,400'

alias mouse_set_0 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 0 --set'
alias mouse_set_1 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 1 --set'
alias mouse_set_2 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 2 --set'
alias mouse_set_3 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 3 --set'
alias mouse_set_4 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 4 --set'
alias mouse_set_5 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 5 --set'
alias mouse_set_6 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 6 --set'
alias mouse_set_7 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 7 --set'
alias mouse_set_8 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 8 --set'
alias mouse_set_9 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 9 --set'

alias mouse_resotre_0 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 0'
alias mouse_restore_1 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 1'
alias mouse_restore_2 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 2'
alias mouse_restore_3 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 3'
alias mouse_restore_4 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 4'
alias mouse_restore_5 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 5'
alias mouse_restore_6 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 6'
alias mouse_restore_7 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 7'
alias mouse_restore_8 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 8'
alias mouse_restore_9 shell path:~/ '/Users/alswl/local/bin/move_pointer.py -s 9'

alias mouse_set_last shell path:~/ '/usr/local/bin/cliclick p | awk \'{print $4}\' > /tmp/last_screen'
alias mouse_restore_last shell path:~/ '/usr/local/bin/cliclick m:`cat /tmp/last_screen_t`'
alias _mouse_copy shell path:~/ 'cp /tmp/last_screen /tmp/last_screen_t'

# Resize Bindings
#bind right:alt       resize +10% +0
#bind left:alt        resize -10% +0
#bind up:alt          resize +0   -10%
#bind down:alt        resize +0   +10%
#bind right:ctrl;alt  resize -10% +0 bottom-right
#bind left:ctrl;alt   resize +10% +0 bottom-right
#bind up:ctrl;alt     resize +0   +10% bottom-right
#bind down:ctrl;alt   resize +0   -10% bottom-right

# Push Bindings
#bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
#bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
#bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
#bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Nudge Bindings
#bind right:shift;alt nudge +10% +0
#bind left:shift;alt  nudge -10% +0
#bind up:shift;alt    nudge +0   -10%
#bind down:shift;alt  nudge +0   +10%

# Throw Bindings
bind 1:ctrl;alt         throw 0 resize
bind 2:ctrl;alt         throw 1 resize
#bind 3:ctrl;alt         throw 2 resize
#bind right:ctrl;alt;cmd throw right resize
#bind left:ctrl;alt;cmd  throw left  resize
#bind up:ctrl;alt;cmd    throw up    resize
#bind down:ctrl;alt;cmd  throw down  resize

# Focus Bindings
bind `:alt     sequence _mouse_copy > focus 'iTerm' > mouse_set_last > mouse_restore_last
bind 1:alt     sequence focus 'Firefox' > ${mouse_resotre_0}
bind 2:alt     sequence focus 'Google Chrome' > ${mouse_resotre_0}
bind 3:alt     sequence focus 'QQ' > ${mouse_resotre_0}
bind q:alt     sequence focus 'MacVim' > ${mouse_restore_1}
bind h:alt     sequence focus left > ${mouse_left}
bind l:alt     sequence focus right > ${mouse_right}
#bind up:cmd       focus up
#bind down:cmd     focus down
bind k:alt   focus behind
bind j:alt focus behind

# Window Hints
#bind esc:cmd hint

# Toogle Application
#bind `:alt toggle 'iTerm'
