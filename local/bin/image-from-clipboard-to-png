#!/bin/bash

IMAGE_DIR="./asserts"
URL_PREFIX="./asserts"
test -d $IMAGE_DIR || mkdir -p $IMAGE_DIR

FILE_NAME=$1

if [ -z $FILE_NAME ]; then
    FILE_NAME="paste_`date '+%Y%m%d%H%M'`.png"
fi

PNGPASTE_BIN="/usr/local/bin/pngpaste"

$PNGPASTE_BIN "$IMAGE_DIR/$FILE_NAME"

echo -n "![$FILE_NAME]($URL_PREFIX/$FILE_NAME)" | tee | pbcopy
