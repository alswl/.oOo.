#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

$DIR/paste-rtf-to-html \
	| perl -0777pe 's/class="[a-zA-Z0-9:;\. \s\(\)\-\,]*"//g' \
	| pandoc -f html --atx-headers --wrap none -t "markdown+pipe_tables-simple_tables-multiline_tables-raw_html-link_attributes+lists_without_preceding_blankline" \
	| gsed -E '/^<div>$/d' \
	| gsed -E '/^<\/div>$/d' \
	| perl -0777pe 's/-   <div>\n\n /-/g' \
	| gsed -E '/^    <\/div>$/d' \
	| gsed -E '/[ \s]*:::[ \s]*$/d' \
	| gsed -E '/[ \s]*:::[ \s]* \{.+\}$/d' \
	| perl -0777pe 's/[ \s]+$//g' \
	| gsed -E '/^$/N;/^\n$/D' \
	| gsed -E '/^\[\[\[\]\]\]$/d' \
	| perl -0777pe 's/^\\$//g' \
	| gsed -E 's/^&nbsp;$//g' \
	| gsed -E 's/^\\$//g' \
	| perl -0777pe 's/{[^}]+}//g'

	#| gsed -E 's/\{\s?(\s*(#\S+)*|(\.[a-zA-Z0-9\-]+)*|([a-zA-Z0-9\-]+="[^"]+")*\s*)+\}//g' \

# vim: set ft=sh:
