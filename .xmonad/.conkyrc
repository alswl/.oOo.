background no
out_to_x no
out_to_console yes
update_interval 3
total_run_times 0
use_spacer none
 
# temp, loadavg, cpu usage, cpu freq, battery, network (click launches wicd), date
 
TEXT
^fg(\#999999)${hwmon temp 1}Â°^fg()  \
^fg(\#666666)${loadavg 1}^fg()  \
