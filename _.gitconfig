[color]
    diff = auto 
[diff]
	external = git_diff_wrapper
[pager]
	diff = 
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	st = status
	pl = pull
	ps = push
	if = info
	df = diff
	ci = commit
	co = checkout
	cl = clone
[merge]
	tool = vimdiff
;[push]
	;default = simple
